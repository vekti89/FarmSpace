<% layout("layouts/boilerplate") %> 
<link rel="stylesheet" href="/styles/farmIndex.css">

<div class="row">
    <div class="offset-1 col-10 offset-md-2 col-md-8 offset-lg-3 col-lg-6 mt-3 mt-md-4 mt-lg-5">
        
        <div class="intro text-center">
            <h2 class="shady">Login</h2>
            <i class="fas fa-ellipsis-h"></i>
        </div>

        <form action="/login" method="POST" class="validated-form mt-2 mt-lg-4" novalidate>
            <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <div class="input-group">
                    <span class="input-group-text" id="username"><small><i class="fas fa-user text-primary"></i></small></span>
                    <input class="form-control" type="text" id="username" name="username" placeholder="Username" required>
                    <div class="invalid-feedback">
                        Please provide a username.
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <div class="input-group">
                    <span class="input-group-text" id="password"><small><i class="fas fa-key text-primary"></i></small></span>
                    <input class="form-control" type="password" id="password" name="password" placeholder="Password"
                    required>
                    <div class="invalid-feedback">
                        Please provide a password.
                    </div>
                </div>
            </div>

            <div class="form-group">
                <button class="form-control btn-primary my-4"><small><i class="fas fa-user"></i></small> LOGIN!</button>
                <hr>                
                <p class="text-center text-muted">
                    New to FarmSpace?
                </p>
                <p class="text-center"><a href="/register">Sign up now!</a></p>
            </div>
        </form>
        <a class="btn btn-primary btn-sm mt-2" href="/farms"><i class="fas fa-arrow-circle-left"></i> Back!</a>

    </div>
</div>